{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "build",
    "jest.config.ts",
    "src/**/*.test.ts"
  ]
}